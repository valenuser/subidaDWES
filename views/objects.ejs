<%- include('partials/header') %>
<section class="w-[100%] h-[100vh] bg-cover" style="background-image: url('public/img/paisaje.webp');">
    <nav class="w-[100%] h-[5vh] bg-black opacity-80 flex justify-between items-center">
        <a href="/"><i class="fa-solid fa-mountain text-white text-[20px] ml-5"></i></a>
        <div class="w-[500px] flex justify-around text-[20px] text-white font-bold">
            <select name="select" id="" onchange="location = this.value" class="w-[200px] text-black">
                <option value="/users">Users</option>
                <option value="/users" selected>Objects</option>
            </select>
            <p>Profile</p>
            <a href="/logout">Logout</a>
        </div>
    </nav>
        <% try { %>
            <% if (data.length != 0) { %>
                <div class="w-[100%] h-[90vh] flex flex-wrap justify-around items-start">
                    <% data.forEach(element => { %>
                        <div class="w-[400px] h-[400px] flex flex-col justify-between rounded bg-white">
                            <img src="<%= element.picture %>" alt="" class="w-[100%] h-[250px]">
                            <div class="flex flex-col">
                                <h3 class=" font-bold text-[20px]"><%= element.title %> </h3>
                                <p class="text-black"><%= element.description %></p>
                            </div>

                        </div>
                    <% }) %>
            </div>
            <% }else{ %>
                <div class="w-[100%] h-[90vh] flex flex-col justify-center items-center">
                    <h1 class="text-[35px] text-white font-bold">No hay ojectos a√±adidos</h1>
                </div>
            <% } %>
        <% }catch(e){ %>
            <% console.log(e) %>
            <div class="w-[100%] h-[90vh] flex flex-col justify-center items-center">
                <h1 class="text-[35px] text-white font-bold">Hubo un problema al cargar los objectos. Intentelo de nuevo mas tarde</h1>
            </div>
        <% } %>
<%- include('partials/footer') %>