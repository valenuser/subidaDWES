<%- include('partials/header') %>
<section class="w-[100%] h-[100vh] bg-cover" style="background-image: url('public/img/inicio.jpeg');">
<%- include('partials/nav') %>
<div class="w-[100%] h-[90vh] flex flex-col justify-center items-center">
    <div class="w-[100%] h-[84vh] flex flex-col items-center justify-center">
        <form  action="/login" method="post" class="bg-black  w-[600px] h-[500px] rounded-lg flex flex-col items-center justify-around">
            <h1 class="text-white text-[50px] font-bold">Login</h1>
            <div style="display: flex; flex-direction: column; justify-content: space-around;">
                <label for="">Email</label>
                <input type="email" name="email" id="" placeholder="Email de usuario" style="border: 1px solid black; outline: none; width: 300px; padding: 5px;border-radius: 10px;">
            </div>
            <div style="display: flex; flex-direction: column; justify-content: space-around;">
                <label for="">Contraseña</label>
                <input type="password" name="password" id="" placeholder="Contraseña de usuario" style="border: 1px solid black; outline: none; width: 300px; padding: 5px; border-radius: 10px;">
            </div>
            <button class="text-white font-bold bg-purple-800 rounded-lg p-2 w-[150px]" type="submit">Login</button>
            <a href="/reset" class="decoration-none text-white font-bold">Te olvidaste la contraseña? <span class="text-blue-600 font-bold">Pulsa aqui</span></a>
        </form>
        <% try { %>
            <% if (error) { %>
                <div class="flex flex-col w-[100%] items-center">
                    <% error.forEach(element => { %>
                        <p class="text-red-600 font-bold text-[20px]"><%= element.msg %> </p>
                    <% }) %>
                </div>
            <% } %>
        <% }catch(e){ %>
            <% console.log(e) %>
        <% } %>>
    </div>
</div>
<%- include('partials/footer') %>